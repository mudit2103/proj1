<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>


<% if @trainer.id == current_trainer.id %>
	<%= button_to "Create pokemon!", new_pokemon_path, :class => "button small", :method => :get%> 
<% end %>

<% Pokemon.all.each do |p| %>
	<% if p.trainer_id == @trainer.id %>
	  <%= "Name: #{p.name}, Level: #{p.level}, Health: #{p.health}" %> 
	  <%= button_to "Damage!", damage_path(id: p), :class => "button small", :method => :patch%> 
	<% end %>
<% end %>
